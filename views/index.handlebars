<div class="col-md-6 col-sm-6 col-xs-6">
	<div class="panel panel-default">
		<div class="panel-heading">The Uneaten</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Burger</th>
					<th style="text-align: center;"><span class="glyphicon glyphicon-check" aria-hidden="true"></span></th>
				</tr>
			</thead>
			<tbody>
				{{#each uneaten}}
				<tr>
					<th scope=row>{{id}}</th>
					<td>{{burger_name}}</td>
					<td><button type="button" class="center-block btn btn-primary" id="{{id}}" onClick="devour(this.id);">Devour</button></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<div class="col-md-6 col-sm-6 col-xs-6">
	<div class="panel panel-default">
		<div class="panel-heading">Devoured</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Burger</th>
					<th style="text-align: center;"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></th>
					<th style="text-align: center;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></th>
				</tr>
			</thead>
			<tbody>
				{{#each devoured}}
				<tr>
					<th scope=row>{{id}}</th>
					<td>{{burger_name}}</td>
					<td><button type="button" class="center-block btn btn-success" id="{{id}}" onClick="reorder(this.id);">Re-Order</button></td>
					<td><button type="button" class="center-block btn btn-danger" id="{{id}}" onClick="removeBurger(this.id);">Remove</button></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>